<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_transparent_shape_border">

    <TextView
        android:id="@+id/item_selected_tv_selected_genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="10dp"
        android:layout_toStartOf="@+id/item_selected_img_drop_down_arrow"
        android:text="@string/genre_name"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/item_selected_img_drop_down_arrow"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_drop_down_arrow"
        android:layout_marginEnd="5dp"
        />
</RelativeLayout>