<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_genre_grid"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/define_dimen_10"
    android:layout_marginEnd="@dimen/define_dimen_10"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/define_dimen_6"
        app:cardBackgroundColor="#1f3363">

        <TextView
            android:id="@+id/tv_genre_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/define_dimen_120"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/genre_name"
            android:textAllCaps="true"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

</LinearLayout>