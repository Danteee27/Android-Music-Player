<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/define_dimen_70"
    android:background="@drawable/bg_green_shape_corner_6"
    tools:ignore="ContentDescription" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/define_dimen_10"
        android:layout_marginEnd="@dimen/define_dimen_5"
        android:layout_marginTop="@dimen/define_dimen_16"
        android:layout_toStartOf="@+id/layout_button"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginBottom="5dp"
                tools:srcCompat="@drawable/ic_small_push_notification"
                android:src="@drawable/ic_small_push_notification" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="@dimen/text_size_xsmall"
                android:textStyle="bold"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_song_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/text_size_xsmall"
            android:textStyle="bold"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/tv_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/text_size_xsmall"
            android:textStyle="italic"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/define_dimen_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_previous"
            android:layout_width="@dimen/define_dimen_24"
            android:layout_height="@dimen/define_dimen_24"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_previous_white"
            />

        <ImageView
            android:id="@+id/img_play"
            android:layout_width="@dimen/define_dimen_30"
            android:layout_height="@dimen/define_dimen_30"
            android:layout_marginStart="@dimen/define_dimen_10"
            android:layout_marginEnd="@dimen/define_dimen_10"
            android:src="@drawable/ic_pause_white"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/img_next"
            android:layout_width="@dimen/define_dimen_24"
            android:layout_height="@dimen/define_dimen_24"
            android:layout_marginEnd="@dimen/define_dimen_14"
            android:src="@drawable/ic_next_white" />

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="@dimen/define_dimen_24"
            android:layout_height="@dimen/define_dimen_24"
            android:src="@drawable/ic_close_white" />
    </LinearLayout>
</RelativeLayout>
